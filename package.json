{
  "scripts": {
    "clean": "rimraf public",
"start": "cross-env TAILWIND_MODE=watch NODE_ENV=development npm-run-all clean prelim:twcss --parallel dev:*",
"build": "cross-env NODE_ENV=production npm-run-all clean prelim:twcss prod:*",
    "prelim:twcss": "npx tailwindcss -i ./assets/css/main.css -o ./static/css/main.css"
    ,
    "dev:twcssw": "npx tailwindcss -i ./assets/css/main.css -o ./static/css/main.css --watch",
    "dev:hugo": "hugo server",
    "prod:twcss": "npx tailwindcss -i ./assets/css/main.css -o ./static/css/main.css --minify",
    "prod:hugo": "hugo --gc --minify"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.23",
    "clipboard": "^2.0.11",
    "cross-env": "^10.1.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.0",
    "rimraf": "^6.1.2",
    "tailwindcss": "^3.4.19"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}
